@model StAbraamFamily.Models.ServiceType

@{
    ViewBag.Title = "أضافة نوع خدمة";
    Layout = "~/Views/Shared/_FamilyLayout.cshtml";
}


<header class="page-header" style="background-color: #0088cc;border-left-color: #0088cc">
    <h2 class="text-white" style="        border-bottom-color: #5bc0de !important;font-size: 25px;font-weight: bold;font-family: Calibri"> أنواع الخدمات المتاحة </h2>
    <div class="right-wrapper text-left">
        <ol class="breadcrumbs float-md-right mr-5">
            <li>
                <a href="@Url.Action("Index","ServiceTypes",null)" class="text-white" style="font-size:18px;font-weight:bold;font-family:Calibri" >
                    <i class="fas fa-user-cog text-warning"></i> تقرير أنواع الخدمات
                </a>
            </li>
        </ol>
    </div>
</header>


@*<a href="#" class="btn btn-danger" data-toggle="modal" data-target="#myModal">Open Modal</a>*@
<div class="modal fade" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-title">Michael Modal</div>
                <a href="#" data-dismiss="modal" class="close">&times;</a>
            </div>
            <div class="modal-body">

                <div class="card card-featured card-featured-success">
                    <div class="card-content">
                        <div class="card-header">
                            <h2 class="card-title" style="text-align:center;font-size:25px;font-weight:bold;font-family:Calibri"> أضافة نوع خدمة جديد  </h2>
                        </div>
                        <div class="card-body">

                        </div>
                        <div class="card-footer"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <a href="#" data-dismiss="modal" class="btn btn-default">cancel</a>
                <a href="#" class="btn btn-success">Submit</a>

            </div>
        </div>
    </div>


</div>


<div class="col-lg-12">
    <section class="card card-featured card-featured-dark mb-4">
        <header class="card-header">
            <div class="card-actions">
                @*<a href="#" class="card-action card-action-toggle" data-card-toggle></a>*@
            </div>
            <h2 class="card-title" style="text-align:center;font-size:25px;font-weight:bold;font-family:Calibri"> أضافة نوع خدمة جديد  </h2>
        </header>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label col-md-4" style="float: right;font-size: 14px;font-weight: bold;text-align: right;font-family: Calibri">نوع الخدمة</label>
                                <div class="col-md-12">
                                    <div class="input-group">
                                        <span class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fas fa-cogs text-dark"></i>
                                            </span>
                                        </span>
                                        @Html.EditorFor(model => model.ActionType, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.ActionType, "", new { @class = "text-danger" })
                                    </div>

                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label col-md-4" style="float: right;font-size: 14px;font-weight: bold;text-align: right;font-family: Calibri">أسم  الخادم</label>
                                <div class="col-md-12">
                                    <div class="input-group">
                                        <span class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fas fa-user-check text-dark"></i>
                                            </span>
                                        </span>
                                        @Html.DropDownList("ServantID", null, htmlAttributes: new { @class = "form-control " })
                                        @Html.ValidationMessageFor(model => model.ServantID, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="control-label col-md-4" style="float: right;font-size: 14px;font-weight: bold;text-align: right;font-family: Calibri">وصف الخدمة  </label>
                                <div class="col-md-12">
                                    <div class="input-group">
                                        <span class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fas fa-user-edit text-dark"></i>
                                            </span>
                                        </span>
                                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row m-4">
                        <div class="col-md-6">
                            <a href="#" class="btn btn-sm btn-outline-danger" style="width:100%;font-size: 20px;font-weight: bold;text-align: center;font-family: Calibri">ألغاء أدخال الخدمة</a>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-12">
                                    <input type="submit" value="أضافة نوع الخدمة " class="btn btn-sm btn-dark" style="width:100%;font-size: 20px;font-weight: bold;text-align: center;font-family: Calibri" />
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            }
        </div>


    </section>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")


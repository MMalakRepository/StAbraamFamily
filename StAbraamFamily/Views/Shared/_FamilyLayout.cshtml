                            <ul class="nav nav-pills" id="mainNav">

                                <li>
                                    @Html.ActionLink("الأفراد", "Index", "People", null, new { @class = "nav-link linkFont" })
                                </li>

                                <li class="">
                                    @Html.ActionLink("العائلات", "Index", "Families", null, new { @class = "nav-link linkFont" })
                                </li>
                                <li class="">
                                    @Html.ActionLink("الأبناء", "Index", "Children", null, new { @class = "nav-link linkFont" })
                                </li>

                                <li class="">
                                    @Html.ActionLink("الخدام", "Index", "Servants", null, new { @class = "nav-link linkFont" })
                                </li>

                                <li class="">
                                    @Html.ActionLink("الأباء الكهنة", "Index", "Fathers", null, new { @class = "nav-link linkFont" })
                                </li>

                                <li class="">
                                    @Html.ActionLink("الخدمات", "Index", "ServiceActions", null, new { @class = "nav-link linkFont" })
                                </li>
                                <li class="">
                                    @Html.ActionLink("الخدمات العلاجية", "AddHealthyService", "ServiceActions", null, new { @class = "nav-link linkFont" })
                                </li>
                                <li class="">
                                    @Html.ActionLink("شنطة البركة", "AddBagService", "ServiceActions", null, new { @class = "nav-link linkFont" })
                                </li>
                                <li class="">
                                    @Html.ActionLink("الخدمات المالية", "AddFinancialService", "ServiceActions", null, new { @class = "nav-link linkFont" })
                                </li>
                                <li class="">
                                    @Html.ActionLink("المستشفيات", "Index", "Hospitals", null, new { @class = "nav-link linkFont" })
                                </li>

                                <li class="">
                                    @Html.ActionLink("العيادات", "Index", "Clinics", null, new { @class = "nav-link linkFont" })
                                </li>

                                <li class="">
                                    @Html.ActionLink("Dashboard", "Home", "Home", null, new { @class = "nav-link" })
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
                <!-- end: header nav menu -->
            </div>
            <!-- start: search & user box -->
            <div class="header-right">

                <div id="userbox" class="userbox">
                    <a href="#" data-toggle="dropdown">
                        @*<figure class="profile-picture">
                                <img src="~/Assets/img/!logged-user.jpg" alt="Joseph Doe" class="rounded-circle" data-lock-picture="~/Assets/img/!logged-user.jpg" />
                            </figure>*@
                        <div class="profile-info" data-lock-name="John Doe" data-lock-email="johndoe@okler.com">
                            <span class="name">@User.Identity.Name</span>
                            @*<span class="role">administrator</span>*@
                        </div>

                        @*<i class="fa custom-caret"></i>*@
                    </a>

                    <div class="dropdown-menu">
                        <ul class="list-unstyled mb-2">
                            <li class="divider"></li>
                            <li>
                                <a role="menuitem" tabindex="-1" href="#"><i class="fas fa-user"></i> Reset Password</a>
                            </li>

                            <li>
                                <a role="menuitem" tabindex="-1" href="#"><i class="fas fa-power-off"></i> Logout</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- end: search & user box -->
        </header>
        <!-- end: header -->

        <div class="inner-wrapper">
            <!-- start: sidebar -->
            <aside id="sidebar-left" class="sidebar-left">

                <div class="sidebar-header">
                    <div class="sidebar-title text-primary">
                        <p><i class="fa fa-cogs fa-2x text-info"></i> <span style="font-size: 18px; font-weight: bold;">System Services</span> </p>

                    </div>
                    <div class="sidebar-toggle d-none d-md-block" data-toggle-class="sidebar-left-collapsed" data-target="html" data-fire-event="sidebar-left-toggle">
                        <i class="fas fa-bars" aria-label="Toggle sidebar"></i>
                    </div>
                </div>

                <div class="nano">
                    <div class="nano-content">
                        <nav id="menu" class="nav-main" role="navigation">

                            <ul class="nav nav-main">
                                <li>
                                    <a href="@Url.Action("Index","People",null)" class="nav-link linkFont">
                                        @*<span class="float-right badge badge-primary">182</span>*@
                                        <i class="fas fa-user-circle text-primary" aria-hidden="true"></i>
                                        <span style="font-family:calibri;font-size:1.2em;">الأفراد</span>
                                    </a>


                                </li>
                                <li>
                                    <a class="nav-link linkFont" href="@Url.Action("Index","Families",null)">
                                        @*<span class="float-right badge badge-danger">123</span>*@
                                        <i class="fas fa-list text-danger" aria-hidden="true"></i>
                                        <span style="font-family: calibri;font-size: 1.2em;">العائلات</span>
                                    </a>
                                </li>
                                <li>
                                    <a class="nav-link linkFont" href="@Url.Action("Index","Children",null)">
                                        @*<span class="float-right badge badge-danger">123</span>*@
                                        <i class="fas fa-child text-info" aria-hidden="true"></i>
                                        <span style="font-family: calibri;font-size: 1.2em;">الأبناء</span>
                                    </a>
                                </li>
                                <li>
                                    <a class="nav-link linkFont" href="@Url.Action("Index","ServiceActions",null)">
                                        @*<span class="float-right badge badge-warning">12</span>*@
                                        <i class="fas fa-globe text-warning" aria-hidden="true"></i>
                                        <span style="font-family:calibri;font-size :1.2em">الخدمات</span>
                                    </a>
                                </li>
                                <li>
                                    <a class="nav-link linkFont" href="@Url.Action("Index","Fathers",null)">
                                        @*<span class="float-right badge badge-success">4</span>*@
                                        <i class="fas fa-pray text-success" aria-hidden="true"></i>
                                        <span style="font-family:calibri;font-size:1.2em;">الأباء الكهنة</span>
                                    </a>
                                </li>
                                <li>
                                    <a class="nav-link linkFont" href="@Url.Action("Index","Servants",null)">
                                        @*<span class="float-right badge badge-info">30</span>*@
                                        <i class="fas fa-user-alt text-info" aria-hidden="true"></i>
                                        <span style="font-family:calibri;font-size:1.2em;">الخدام</span>
                                    </a>
                                </li>
                                <li>
                                    <a class="nav-link linkFont" href="@Url.Action("Index","Hospitals",null)">
                                        @*<span class="float-right badge" style=" color:white; background-color:sandybrown">20</span>*@
                                        <i class="fas fa-clinic-medical" style="color:sandybrown" aria-hidden="true"></i>
                                        <span style="font-family:calibri;font-size:1.2em;">المستشفيات  </span>
                                    </a>
                                </li>
                                <li>
                                    <a class="nav-link linkFont" href="@Url.Action("Index","Clinics",null)">
                                        @*<span class="float-right badge" style=" color:white; background-color:orangered">20</span>*@
                                        <i class="fas fa-clinic-medical" style="color: orangered" aria-hidden="true"></i>
                                        <span style="font-family:calibri;font-size:1.2em">العيادات</span>
                                    </a>
                                </li>
                                <li>
                                    <a class="nav-link linkFont" href="@Url.Action("Index","EvaluationLevels",null)">
                                        @*<span class="float-right badge" style=" color:white; background-color:orangered">20</span>*@
                                        <i class="fas fa-users-cog" style="color: deepskyblue" aria-hidden="true"></i>
                                        <span style="font-family:calibri;font-size:1.2em">تقييم العائلات</span>
                                    </a>
                                </li>



                            </ul>
                        </nav>

                        <hr class="separator" />
                        <div class="sidebar-widget widget-tasks">
                            <div class="widget-header">
                                <h6> الخدمات العائلية</h6>
                                <div class="widget-toggle">+</div>
                            </div>
                            <div class="widget-content">
                                <ul class="list-unstyled m-0">
                                    <li><a href="@Url.Action("AddBagService","ServiceActions")" class="linkFont"> شنط البركة</a></li>
                                    <li><a href="@Url.Action("AddHealthyService","ServiceActions")" class="linkFont">المستشفيات و العيادات</a></li>
                                    <li><a href="@Url.Action("AddFinancialService","ServiceActions")" class="linkFont">الخدمات المالية</a></li>
                                </ul>
                            </div>
                        </div>
                        <hr class="separator" />
                        <div class="sidebar-widget widget-tasks">
                            <div class="widget-header">
                                <h6>التقارير الأساسية</h6>
                                <div class="widget-toggle">+</div>
                            </div>
                            <div class="widget-content">
                                <ul class="list-unstyled m-0">
                                    <li><a href="@Url.Action("Index","ServiceActions",null)" class="linkFont"> الخدمات</a></li>
                                    <li><a href="@Url.Action("Index","Families",null)" class="linkFont">العائلات</a></li>
                                    <li><a href="@Url.Action("Index","FamilyServants",null)" class="linkFont">الخدام</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <script>
                        // Maintain Scroll Position
                        if (typeof localStorage !== 'undefined') {
                            if (localStorage.getItem('sidebar-left-position') !== null) {
                                var initialPosition = localStorage.getItem('sidebar-left-position'),
                                    sidebarLeft = document.querySelector('#sidebar-left .nano-content');

                                sidebarLeft.scrollTop = initialPosition;
                            }
                        }
                    </script>
                </div>

            </aside>
            <!-- end: sidebar -->

            <section role="main" class="content-body">
                @RenderBody()

            </section>
        </div>
    </section>


@using StAbraamFamily.Web.Entities.Domain
@model MedicalService

@{
    ViewBag.Title = "أضافة نوع خدمة طبية";
    Layout = "~/Views/Shared/_FamilyLayout.cshtml";
}

<header class="page-header" style="background-color: #0088cc;border-left-color: #0088cc">
    <h2 class="text-white" style="border-bottom-color: #388038 !important;font-size: 25px;font-weight: bold;font-family: Calibri"> بيانات الخدمات الطبية</h2>
</header>



<div class="col-lg-12">
    <div class="row">
        <div class="col-md-8">
            <h4 class="display-4 text-center text-success">New Medical Service</h4>
        </div>
        <div class="col-md-4 mt-5">
            <a href="@Url.Action("Index","MedicalServices",null)" class="text-success" style="font-size:18px;font-weight:bold;font-family:Calibri">
                <i class="fas fa-user-nurse text-warning"></i> تقرير الخدمات الطبية
            </a>
        </div>
    </div>
    <section class="card card-featured card-featured-success mb-4">

        <header class="card-header">
            <h2 class="card-title" style="text-align:center;font-size:25px;font-weight:bold;font-family:Calibri"> بيانات خدمة طبية جديدة</h2>
        </header>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">

                        <label class="control-label col-md-2" style="float: right;font-size: 14px;font-weight: bold;text-align: right;font-family: Calibri">   الخدمة الطبية</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.MedicalService1, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MedicalService1, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2" style="float: right;font-size: 14px;font-weight: bold;text-align: right;font-family: Calibri">   ملاحظات أضافية</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Notes, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Notes, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row m-4">
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-12">
                                    <input type="submit" value="أضافة الخدمة الطبية" class="btn btn-sm btn-success" style="width:100%;font-size: 20px;font-weight: bold;text-align: center;font-family: Calibri" />
                                </div>
                            </div>

                        </div>
                    </div>

                </div>
            }
        </div>

    </section>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
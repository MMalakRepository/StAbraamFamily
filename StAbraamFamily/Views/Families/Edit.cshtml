@model StAbraamFamily.Models.Family

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_FamilyLayout.cshtml";
}

<header class="page-header" style="background-color: #0088cc;border-left-color: #0088cc">
    <h2 class="text-white" style="border-bottom-color: #ffc107 !important;font-size: 25px;font-weight: bold;font-family: Calibri">أضافة بيانات العائلة</h2>
    <div class="right-wrapper text-left">
        <ol class="breadcrumbs float-md-right mr-5">
            <li>
                <a href="@Url.Action("Index","Families",null)" class="text-white" style="font-size: 18px; font-weight: bold; font-family: Calibri">
                    <i class="fas fa-list-ul text-warning"></i> تقرير العائلات
                </a>
            </li>
        </ol>
    </div>
</header>



<div class="col-lg-12">
    <div class="row">
        <div class="col-md-6">
            <h4 class="display-4 text-center text-primary">Update Family Data</h4>
        </div>
        <div class="col-md-4 m-4 ">
            <a href="@Url.Action("Create","People")" class="btn btn-sm btn-primary m-2 " style="float: right;font-size: 16px;"><i class="fa fa-plus-circle"></i> أضافة فرد جديد</a>
            <a href="@Url.Action("Create","Families")" class="btn btn-sm btn-warning m-2 text-dark " style="float:right;font-size:16px;"><i class="fa fa-users"></i> أضافة عائلة جديدة</a>
            @*<a href="@Url.Action("Create","Servants")" class="btn btn-sm btn-danger m-2 text-white " style="float:right;font-size:16px;"><i class="fa fa-user-check"></i> أضافة خادم جديدة</a>*@
        </div>
    </div>
    <section class="card card-featured card-featured-dark mb-4">
        <header class="card-header">
            <h2 class="card-title" style="text-align:center;font-size:25px;font-weight:bold;font-family:Calibri"> بيانات  العائلة</h2>
        </header>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label col-md-4" style=" float: right; font-size: 14px; font-weight: bold;text-align: right;"> كود العائلة</label>

                                <div class="col-md-12">
                                    <div class="input-group">
                                        <span class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fas fa-users-cog text-dark bg-white"></i>
                                            </span>
                                        </span>
                                        @Html.EditorFor(model => model.FamilyCode, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.FamilyCode, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-8">
                            <div class="form-group">
                                <label class="control-label col-md-4" style=" float: right; font-size: 14px; font-weight: bold;text-align: right;"> العنوان</label>

                                <div class="col-md-12">
                                    <div class="input-group">
                                        <span class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fas fa-home text-dark bg-white"></i>
                                            </span>
                                        </span>
                                        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label col-md-4" style=" float: right; font-size: 14px; font-weight: bold;text-align: right;">أسم الأب</label>
                                <div class="col-md-12">
                                    <div class="input-group">
                                        <span class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fas fa-male text-dark bg-white"></i>
                                            </span>
                                        </span>
                                        @Html.DropDownList("FatherID", null, htmlAttributes: new { @class = "form-control" })
                                        @*@Html.DropDownListFor(model => model.FatherID, ViewBag.FatherID, htmlAttributes: new { @class = "form-control" })*@
                                        @Html.ValidationMessageFor(model => model.FatherID, "", new { @class = "text-danger" })
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label col-md-4" style=" float: right; font-size: 14px; font-weight: bold;text-align: right;">أسم الأم</label>
                                <div class="col-md-12">
                                    <div class="input-group">
                                        <span class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fas fa-female text-dark bg-white"></i>
                                            </span>
                                        </span>
                                        @Html.DropDownList("MotherID", null, htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.MotherID, "", new { @class = "text-danger" })
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label col-md-4" style=" float: right; font-size: 14px; font-weight: bold;text-align: right;">تقييم الأسرة</label>
                                <div class="col-md-12">
                                    <div class="input-group">
                                        <span class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fas fa-list-ul text-dark bg-white"></i>
                                            </span>
                                        </span>
                                        @Html.DropDownList("EvaluationLevelID", null, htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.EvaluationLevelID, "", new { @class = "text-danger" })
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="form-group">
                                <label class="control-label col-md-4" style=" float: right; font-size: 14px; font-weight: bold;text-align: right;"> ملاحظات أضافية</label>
                                <div class="col-md-12">
                                    <div class="input-group">
                                        <span class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fas fa-edit text-dark bg-white"></i>
                                            </span>
                                        </span>
                                        @Html.EditorFor(model => model.Notes, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Notes, "", new { @class = "text-danger" })
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label col-md-4" style=" float: right; font-size: 14px; font-weight: bold;text-align: right;"> خادم الأفتقاد</label>
                                <div class="col-md-12">
                                    <div class="input-group">
                                        <span class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fas fa-user-cog text-dark bg-white"></i>
                                            </span>
                                        </span>
                                        @Html.DropDownList("ServantID", null, htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.ServantID, "", new { @class = "text-danger" })
                                    </div>

                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label col-md-4" style=" float: right; font-size: 14px; font-weight: bold;text-align: right;">  الأب الكاهن المسئول </label>
                                <div class="col-md-12">
                                    <div class="input-group">
                                        <span class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fas fa-church text-dark bg-white"></i>
                                            </span>
                                        </span>
                                        @Html.DropDownList("MissingPriestID", null, htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.MissingPriestID, "", new { @class = "text-danger" })
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6"></div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-12">
                                    <input type="submit" value="تعديل بيانات العائلة" class="btn btn-sm btn-primary mt-3" style="width:100%;font-size:16px;font-weight:bold;" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

    </section>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}


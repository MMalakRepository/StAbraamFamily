@model StAbraamFamily.Models.Family

@{
    ViewBag.Title = "أضافة عائلة جديدة";
    Layout = "~/Views/Shared/_FamilyLayout.cshtml";
}

<header class="page-header" style="background-color: #0088cc;border-left-color: #0088cc">
    <h2 class="text-white" style="border-bottom-color: #ffc107 !important;font-size: 25px;font-weight: bold;font-family: Calibri">أضافة بيانات العائلة</h2>
</header>

<div class="col-lg-12">
    <div class="row">
        <div class="col-md-7">
            <h4 class="display-4 text-center text-primary">New Family Data</h4>
        </div>
        <div class="col-md-5 mt-5">
            <a href="@Url.Action("Index","Families",null)" class="text-primary" style="font-size: 18px; font-weight: bold; font-family: Calibri">
                <i class="fas fa-list-ul text-warning"></i> تقرير العائلات
            </a>

            <a href="@Url.Action("Create","EvaluationLevels")" class="text-primary" style="font-size: 18px; font-weight: bold; font-family: Calibri">
                <i class="fa fa-plus-circle text-warning"></i> أضافة نسبة تحمل جديدة
            </a>

            <a href="@Url.Action("Create","People")" class="text-primary" style="font-size: 18px; font-weight: bold; font-family: Calibri">
                <i class="fa fa-user-plus text-warning"></i> أضافة فرد جديد
            </a>
        </div>
        
    </div>
    <section class="card card-featured card-featured-primary mb-4">
        <header class="card-header">
            <h2 class="card-title" style="text-align:center;font-size:25px;font-weight:bold;font-family:Calibri"> بيانات  العائلة</h2>
        </header>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    <div class="row" style="font-size:18px;font-weight:bold;font-family:Calibri;">
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label col-md-4" style=" float: right; font-size: 14px; font-weight: bold;text-align: right;"> كود العائلة</label>

                                <div class="col-md-12">
                                    <div class="input-group">
                                        <span class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fas fa-users-cog text-primary bg-white"></i>
                                            </span>
                                        </span>
                                        @Html.EditorFor(model => model.FamilyCode, new { htmlAttributes = new { @class = "form-control" } })
                                        @*@Html.ValidationMessageFor(model => model.FamilyCode, "", new { @class = "text-danger" })*@
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-8">
                            <div class="form-group">
                                <label class="control-label col-md-4" style=" float: right; font-size: 14px; font-weight: bold;text-align: right;"> العنوان</label>

                                <div class="col-md-12">
                                    <div class="input-group">
                                        <span class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fas fa-home text-primary bg-white"></i>
                                            </span>
                                        </span>
                                        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                                        @*@Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })*@
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label col-md-4" style=" float: right; font-size: 14px; font-weight: bold;text-align: right;">أسم الأب</label>
                                <div class="col-md-12">
                                    <div class="input-group">
                                        <span class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fas fa-male text-primary bg-white"></i>
                                            </span>
                                        </span>
                                        @Html.DropDownList("FatherID", null, "أختار الأب", htmlAttributes: new { @class = "form-control" })
                                        @*@Html.ValidationMessageFor(model => model.FatherID, "", new { @class = "text-danger" })*@
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label col-md-4" style=" float: right; font-size: 14px; font-weight: bold;text-align: right;">أسم الأم</label>
                                <div class="col-md-12">
                                    <div class="input-group">
                                        <span class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fas fa-female text-primary bg-white"></i>
                                            </span>
                                        </span>
                                        @Html.DropDownList("MotherID", null, "أختار الأم", htmlAttributes: new { @class = "form-control" })
                                        @*@Html.ValidationMessageFor(model => model.MotherID, "", new { @class = "text-danger" })*@
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label col-md-4" style=" float: right; font-size: 14px; font-weight: bold;text-align: right;">نسبة التحمل</label>
                                <div class="col-md-12">
                                    <div class="input-group">
                                        <span class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fas fa-list-ul text-primary bg-white"></i>
                                            </span>
                                        </span>
                                        @Html.DropDownList("EvaluationLevelID", null, "أختار نسبة التحمل", htmlAttributes: new { @class = "form-control" })
                                        @*@Html.ValidationMessageFor(model => model.EvaluationLevelID, "", new { @class = "text-danger" })*@
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="form-group">
                                <label class="control-label col-md-4" style=" float: right; font-size: 14px; font-weight: bold;text-align: right;"> ملاحظات أضافية</label>
                                <div class="col-md-12">
                                    <div class="input-group">
                                        <span class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fas fa-edit text-primary bg-white"></i>
                                            </span>
                                        </span>
                                        @Html.EditorFor(model => model.Notes, new { htmlAttributes = new { @class = "form-control" } })
                                        @*@Html.ValidationMessageFor(model => model.Notes, "", new { @class = "text-danger" })*@
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label col-md-4" style=" float: right; font-size: 14px; font-weight: bold;text-align: right;"> خادم الأفتقاد</label>
                                <div class="col-md-12">
                                    <div class="input-group">
                                        <span class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fas fa-user-cog text-primary bg-white"></i>
                                            </span>
                                        </span>
                                        @Html.DropDownList("ServantID", null,"أختار الخادم",htmlAttributes: new { @class = "form-control" })
                                        @*@Html.ValidationMessageFor(model => model.ServantID, "", new { @class = "text-danger" })*@
                                    </div>

                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label col-md-4" style=" float: right; font-size: 14px; font-weight: bold;text-align: right;">  الأب الكاهن المسئول </label>
                                <div class="col-md-12">
                                    <div class="input-group">
                                        <span class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fas fa-church text-primary bg-white"></i>
                                            </span>
                                        </span>
                                        @Html.DropDownList("MissingPriestID", null,"أختار الأب الكاهن", htmlAttributes: new { @class = "form-control" })
                                        @*@Html.ValidationMessageFor(model => model.MissingPriestID, "", new { @class = "text-danger" })*@
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="col-md-offset-2 col-md-12">
                                <a href="@Url.Action("Create","Families")" class="btn btn-sm btn-outline-danger mt-3" style="width:100%;font-size:16px;font-weight:bold;"  > Clear Data</a>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-12">
                                    <input type="submit" value="أضافة العائلة" class="btn btn-sm btn-primary mt-3" style="width:100%;font-size:16px;font-weight:bold;" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

    </section>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}

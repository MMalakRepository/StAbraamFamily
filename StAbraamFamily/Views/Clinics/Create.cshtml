@using StAbraamFamily.Web.Entities.Domain
@model Clinic

@{
    ViewBag.Title = "أضافة عيادة جديدة";
    Layout = "~/Views/Shared/_FamilyLayout.cshtml";
}


<header class="page-header" style="background-color: #0088cc;border-left-color: #0088cc">
    <h2 class="text-white" style="border-bottom-color: #388038 !important;font-size: 25px;font-weight: bold;font-family: Calibri"> بيانات العيادات</h2>
</header>

<div class="col-lg-12">
    <div class="row">
        <div class="col-md-6">
            <h4 class="display-4 text-center text-success">New Clinic Data</h4>
        </div>
        <div class="col-md-6 mt-5">
            <a href="@Url.Action("Index","Clinics",null)" class="text-success" style="font-size:18px;font-weight:bold;font-family:Calibri">
                <i class="fas fa-user-nurse text-warning"></i> تقرير العيادات
            </a>
            <a href="@Url.Action("Index","Hospitals")" class="text-success" style="font-size: 18px; font-weight: bold; font-family: Calibri">
                <i class="fa fa-briefcase-medical text-warning"></i> تقرير المستشفيات
            </a>
            <a href="@Url.Action("Create","Hospitals")" class="text-success" style="font-size: 18px; font-weight: bold; font-family: Calibri">
                <i class="fa fa-clinic-medical text-warning"></i> أضافة مستشفى جديدة
            </a>
        </div>

    </div>
    <section class="card card-featured card-featured-success mb-4">

        <header class="card-header">
            <div class="card-actions">
                <a href="#" class="card-action card-action-toggle" data-card-toggle></a>
            </div>

            <h2 class="card-title" style="text-align:center;font-size:25px;font-weight:bold;font-family:Calibri"> بيانات عيادة جديدة</h2>
        </header>

        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label col-md-4" style="float: right;font-size: 14px;font-weight: bold;text-align: right;font-family: Calibri">   أسم العيادة</label>
                                <div class="col-md-12">
                                    <div class="input-group">
                                        <span class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fas fa-user-nurse text-success bg-white"></i>
                                            </span>
                                        </span>
                                        @Html.EditorFor(model => model.ClinicName, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.ClinicName, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-8">
                            <div class="form-group">
                                <label class="control-label col-md-4" style="float: right;font-size: 14px;font-weight: bold;text-align: right;font-family: Calibri">   العنوان</label>
                                <div class="col-md-12">
                                    <div class="input-group">
                                        <span class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fas fa-home text-success bg-white"></i>
                                            </span>
                                        </span>
                                        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="control-label col-md-4" style=" float: right; font-size: 14px; font-weight: bold;text-align: right;font-family:Calibri">   ملاحظات أضافية</label>
                                <div class="col-md-12">
                                    <div class="input-group">
                                        <span class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fas fa-edit text-success bg-white"></i>
                                            </span>
                                        </span>
                                        @Html.EditorFor(model => model.Notes, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Notes, "", new { @class = "text-danger" })
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row m-4">
                        <div class="col-md-6"></div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-12">
                                    <input type="submit" value="أضافة العيادة" class="btn btn-sm btn-success" style="width:100%;font-size: 20px;font-weight: bold;text-align: center;font-family: Calibri" />
                                </div>
                            </div>

                        </div>
                    </div>

                </div>
            }
        </div>

    </section>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

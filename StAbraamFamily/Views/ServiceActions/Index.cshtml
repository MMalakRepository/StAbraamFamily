@model IEnumerable<StAbraamFamily.Models.ServiceAction>

@{
    ViewBag.Title = "Our Services List";
    Layout = "~/Views/Shared/_FamilyLayout.cshtml";
}


<header class="page-header" style="background-color: #0088cc;

        border-left-color: #0088cc">
    <h2 class="text-white" style=" border-bottom-color: #ffc107 !important;">@ViewBag.Title</h2>

    <div class="right-wrapper text-left">
        <ol class="breadcrumbs float-md-right mr-5">

            <li>
                <a href="@Url.Action("Create","ServiceActions",null)" class="text-white" style="font-size: 18px; font-weight: bold; font-family: Calibri">
                    <i class="fas fa-plus-circle text-warning  rounded-circle"></i> أضافة خدمات اخرى
                </a>
            </li>
            <li>
                <a href="@Url.Action("AddBagService","ServiceActions")" class="text-white" style="font-size: 18px; font-weight: bold; font-family: Calibri">
                    <i class="fa fa-shopping-basket text-warning"></i> أضافة شنطة البركة
                </a>
            </li>
            <li>
                <a href="@Url.Action("AddHealthyService","ServiceActions")" class="text-white" style="font-size: 18px; font-weight: bold; font-family: Calibri">
                    <i class="fa fa-briefcase-medical text-warning"></i> أضافة خدمة علاجية
                </a>

            </li>
            <li>
                <a href="@Url.Action("MedicalServiceList","ServiceActions",null)" class="text-white" style="font-size:18px;font-weight:bold;font-family:Calibri" ">
                    <i class="fas fa-user-cog text-warning"></i> تقرير الخدمات العلاجية
                </a>
            </li>
        </ol>
    </div>
</header>


<div class="col-lg-12">
    <section class="card card-featured card-featured-danger mb-4 card-featured-bottom">
        <header class="card-header">
            <div class="card-actions">
                @*<a href="#" class="card-action card-action-toggle" data-card-toggle></a>*@
            </div>
            <h2 class="card-title" style="text-align:center;font-size:25px;font-weight:bold;font-family:Calibri"> تقرير الخدمات المقدمة  </h2>
        </header>

        <div class="card-body">
            <div class="container p-0" style="max-width:90%">
                <table class="table table-hover table-sm" id="myDataTable">

                    <thead class="bg-danger text-white text-center">
                        <tr>
                            <th>
                                <label class="control-label " style="float: right;font-size: 14px;font-weight: bold;text-align: right;font-family: Calibri">تاريخ الخدمة </label>
                            </th>
                            <th>
                                <label class="control-label " style="float: right;font-size: 14px;font-weight: bold;text-align: right;font-family: Calibri">ملاحظات أضافية </label>
                            </th>         
                            <th>
                                <label class="control-label " style="float: right;font-size: 14px;font-weight: bold;text-align: right;font-family: Calibri">أسم الشخص  </label>
                            </th>
                            <th>
                                <label class="control-label " style="float: right;font-size: 14px;font-weight: bold;text-align: right;font-family: Calibri">أسم الخادم </label>
                            </th>
                            <th>
                                <label class="control-label " style="float: right;font-size: 14px;font-weight: bold;text-align: right;font-family: Calibri">نوع الخدمة </label>
                            </th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>


                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-right">
                                    @*@Html.DisplayFor(modelItem => item.ActionDate, "{0:dd/MM/yyyy}")*@
                                    @Convert.ToDateTime(item.ActionDate).ToString("dd/MM/yyyy")
                                </td>

                                <td class="text-right">
                                    @Html.DisplayFor(modelItem => item.Notes)
                                </td>
                                <td class="text-right">
                                    @Html.DisplayFor(modelItem => item.Person.FullName)
                                </td>
                                <td class="text-right">
                                    @Html.DisplayFor(modelItem => item.Servant.ServantName)
                                </td>
                                <td class="text-right">
                                    @Html.DisplayFor(modelItem => item.ServiceType.ActionType)
                                </td>
                                <td class="text-center">
                                    <a href="@Url.Action("Edit",new { id = item.ID })" title="تعديل البيانات" class="btn bg-primary text-white btn-sm rounded-circle"><i class="fa fa-edit"></i></a>
                                    @*<a href="@Url.Action("Delete",new { id = item.ID })" class="btn bg-danger text-white btn-sm rounded-circle"><i class="fa fa-trash-alt"></i></a>*@
                                    <a href="#" id="btnDelete" onclick="DeleteAction(@item.ID)" title="حذف" class="btn bg-danger text-white btn-sm rounded-circle"><i class="fa fa-trash-alt"></i></a>

                                </td>
                            </tr>
                        }

                    </tbody>

                </table>
            </div>
        </div>
    </section>
</div>


@section Scripts {
    <script src="https://code.jquery.com/jquery-3.5.1.js" type="text/javascript"></script>
    <script src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="~/Assets/vendor/datatables/Buttons-1.6.5/js/dataTables.buttons.js"></script>
    <script src="~/Assets/vendor/datatables/Buttons-1.6.5/js/buttons.bootstrap4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="~/Assets/vendor/datatables/pdfmake-0.1.36/pdfmake.js"></script>
    <script src="~/Assets/vendor/datatables/pdfmake-0.1.36/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.6.4/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.6.4/js/buttons.print.min.js"></script>


    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.22/css/dataTables.bootstrap4.min.css" />
    <link href="~/Assets/vendor/datatables/Buttons-1.6.5/css/buttons.bootstrap4.css" rel="stylesheet" />






    <script src="https://cdn.datatables.net/1.10.22/js/dataTables.bootstrap4.min.js" type="text/javascript"></script>
    <style>
        .exportbtns {
            margin-bottom: 10px;
            padding-left: 20%;
            float: right;
        }
    </style>
    <script>
        $(document).ready(function () {
            $('#myDataTable').dataTable({
                dom: 'Bfrtip',
                buttons: [
                    'excel', 'print'
                ]
            });



            var btnexcel = document.querySelector('.buttons-excel');
            var btnprint = document.querySelector('.buttons-print');
            var btnpdf = document.querySelector('.buttons-pdf');

            document.querySelector('.dt-buttons').classList.add("exportbtns");

            btnexcel.innerHTML = '<i class="fa fa-file-excel "></i>';
            btnexcel.className = 'btn btn-success rounded-circle text-white ml-1';
            btnexcel.addEventListener('mouseover', function () {
                btnexcel.className = 'btn btn-light rounded-circle text-success border-success ml-1';
            });
            btnexcel.addEventListener('mouseout', function () {
                btnexcel.className = 'btn btn-success rounded-circle text-white ml-1 border-success';
            });


            btnprint.innerHTML = '<i class="fa fa-print"></i>';
            btnprint.className = 'btn btn-primary rounded-circle text-white ml-1';
            btnprint.addEventListener('mouseover', function () {
                btnprint.className = 'btn btn-light rounded-circle text-primary border-primary ml-1';
            });
            btnprint.addEventListener('mouseout', function () {
                btnprint.className = 'btn btn-primary rounded-circle text-white ml-1 border-primary';
            });

            btnpdf.innerHTML = '<i class="fa fa-file-pdf "></i>';
            btnpdf.className = 'btn btn-danger rounded-circle text-white ml-1';
            btnpdf.addEventListener('mouseover', function () {
                btnpdf.className = 'btn btn-light rounded-circle text-danger border-danger ml-1';
            });
            btnpdf.addEventListener('mouseout', function () {
                btnpdf.className = 'btn btn-danger rounded-circle text-white ml-1 border-danger';
            });





        });

         function DeleteAction(ID) {
            var reqID = { ID: ID };
            $.ajax({
                async: true,
                type: 'POST',
                dataType: 'JSON',
                contentType: 'application/json;charset=utf-8',
                data: JSON.stringify(reqID),
                url: '@Url.Action("DeleteAction","ServiceActions")',
                success: function (res) {
                    console.log(res);
                    if (res.success === true) {
                        toastr.error(res.message, "Service Action", { timeout: 2000 });
                        setTimeout(function () {
                            window.location.href = '@Url.Action("Index", "ServiceActions")';
                        }, 2000);
                    }
                    else {
                        console.log(res);
                        toastr.error(res.message, "Error Alert", { timeout: 2000 });
                        setTimeout(function () {
                           window.location.href = '@Url.Action("Index", "ServiceActions")';
                        }, 2000)
                    }
                },
                error: function (err) {
                    console.log(err);
                    toastr.error(err.message, "Error Alert", { timeout: 2000 })
                }
            });
        }

    </script>

}
